[
  {
    "type": "header",
    "text": {
      "type": "plain_text",
      "text": "New <%= OpsBot::Context.env.workflow.environment %> deploy triggered",
      "emoji": true
    }
  }, {
    "type": "divider"
  }, {
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "<%= OpsBot::Context.env.github.actor %> :ship: <%= OpsBot::Context.env.aws.ebs.application_name %> [<%= OpsBot::Context.env.aws.ebs.environment_name %>]"
    },
    "accessory": {
      "type": "button",
      "text": {
        "type": "plain_text",
        "text": "Logs",
        "emoji": true
      },
      "url": "<%= DeployActions::Utils.action_run_url %>"
    }
  }, {
    "type": "actions",
    "elements": [
      {
        "type": "button",
        "text": {
          "type": "plain_text",
          "text": "branch: <%= OpsBot::Context.env.github.branch.ref %>",
          "emoji": true
        },
        "url": "<%= DeployActions::Utils.branch_url %>"
      }, {
        "type": "button",
        "text": {
          "type": "plain_text",
          "text": "ref: <%= OpsBot::Context.env.github.branch.sha %>",
          "emoji": true
        },
        "url": "<%= DeployActions::Utils.commit_url %>"
      }
    ]
  }
]
